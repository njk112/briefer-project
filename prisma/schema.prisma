// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model YoutubeAudioLink {
  id              String           @id @default(uuid())
  audioUrl        String           @unique
  youtubeId       String           @unique
  times_accessed  Int              @default(0)
  YoutubeTextLink YoutubeTextLink?
}

model YoutubeTextLink {
  id                  String                @id @default(uuid())
  youtubeAudioLinkId  String                @unique
  youtubeAudioLink    YoutubeAudioLink      @relation(fields: [youtubeAudioLinkId], references: [id])
  youtubeId           String                @unique
  times_accessed      Int                   @default(0)
  textUrl             String                @unique
  YoutubeVideoSummary YoutubeVideoSummary[]
}

model YoutubeVideoSummary {
  id                String              @id @default(uuid())
  youtubeId         String              @unique
  times_accessed    Int                 @default(0)
  summary           String
  YoutubeTextLink   YoutubeTextLink     @relation(fields: [youtubeTextLinkId], references: [id])
  youtubeTextLinkId String
  BrieferPdfReports BrieferPdfReports[]
}

model BrieferPdfReports {
  id             String                @id @default(uuid())
  pdfUrl         String                @unique
  isSent         Boolean               @default(false)
  times_accessed Int                   @default(0)
  videoSummary   YoutubeVideoSummary[]
}
